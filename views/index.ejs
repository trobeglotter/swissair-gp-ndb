                </svg>
            </div>

        </section>

        <section id="form">
            <div class="text-section">
                <p>Please enter your name and email for lounge access. Thank you for using Swiss Air.</p>
            </div>
            <form action="/guest_details_submit" method="post">
                <input type="text" id="surname" name="surname" placeholder="Surname" autocomplete="off">
                <input type="text" id="firstName" name="firstName" placeholder="First Name" autocomplete="off">
                <input type="text" id="email" name="email" placeholder="Email" autocomplete="off">
                <button type="submit" name="submit" value="Submit">Submit</button>
            </form>
            <div class="text-section">
                <p></p>
            </div>

        </section>


        <footer id="footer"></footer>
    </div>
    <script>
        let logoButton = document.getElementById('logo');
        function wrappedAnimationLoop() {
            let paths = document.querySelectorAll('svg path');
            i = 0;
            paths.forEach(function (item, index) {
                i++;
                let pathLength = item.getTotalLength();
                item.setAttribute('stroke-dasharray', pathLength);
                item.setAttribute('stroke-dashoffset', pathLength);
                window.scrollTo({
                    top: 1000,
                    behavior: 'smooth'
                });
                item.innerHTML = `
    <animate attributeName='stroke-dashoffset' begin='0s' dur='2s' to='0' fill='freeze' />`
                let backFillinBeige = document.getElementById('back-fillin-beige');
                let fullOutlineGrey = document.getElementById('full-outline-grey');
                backFillinBeige.innerHTML = `
    <animate attributeName="fill" begin='3s' dur="6s" to="rgb(249, 245, 235)" fill="freeze" />`
                fullOutlineGrey.innerHTML = `
    <animate attributeName="fill" begin='4s' dur="3s" to="rgb(56, 60, 56)" fill="freeze" />`
            });
        }
        logoButton.addEventListener('click', wrappedAnimationLoop());
    </script>
</body>

</html>